        <script><![CDATA[
        // Check if course is at capacity
        if (current.course) {
            var courseGr = new GlideRecord('x_528401_course_ma_courses');
            if (courseGr.get(current.course)) {
                if (courseGr.current_enrollment >= courseGr.max_capacity) {
                    gs.addErrorMessage('Cannot enroll in ' + courseGr.course_name + '. Course is at maximum capacity (' + courseGr.max_capacity + ')');
                    current.setAbortAction(true);
                }
            }
        }
    ]]></script>
